<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/second_hand_item_title_rl"
        style="@style/lost_find_item_group_rl" >

        <ImageView
            android:id="@+id/second_hand_item_title_icon_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/icon_items_title" />

        <TextView
            android:id="@+id/second_hand_item_title_text"
            style="@style/lost_find_item_group_text"
            android:layout_toRightOf="@id/second_hand_item_title_icon_img"
            android:text="@string/second_hand_item" />

        <ImageView
            android:id="@+id/second_hand_item_title_arrow_img"
            style="@style/new_lost_find_arrow_img"
            android:contentDescription="@null" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_item_divider"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/second_hand_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            style="@style/lost_find_child_parent_ll"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/second_hand_item_title_et"
                style="@style/material_edittext_with_clearbtn"
                android:hint="@string/second_hand_item_title"
                app:met_iconLeft="@drawable/icon_title" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/second_hand_item_type_spinner"
                style="@style/material_edittext_no_clearbtn"
                android:hint="@string/second_hand_item_type"
                app:met_iconLeft="@drawable/icon_type"
                app:met_singleLineEllipsis="false" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/second_hand_item_price_et"
                style="@style/material_edittext_with_validate"
                android:hint="@string/second_hand_item_price"
                android:inputType="number"
                app:met_iconLeft="@drawable/icon_price" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/second_hand_item_describe_et"
                style="@style/material_edittext_with_clearbtn"
                android:hint="@string/second_hand_item_describe"
                app:met_iconLeft="@drawable/icon_describe" />

            <com.yzx.lifeassistants.view.widget.NoScrollGridView
                android:id="@+id/second_hand_item_pic_gv"
                style="@style/lost_find_child_ll"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="5dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth" >
            </com.yzx.lifeassistants.view.widget.NoScrollGridView>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_item_divider"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>