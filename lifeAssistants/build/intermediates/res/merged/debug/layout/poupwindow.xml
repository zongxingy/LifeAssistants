<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.0px"
    android:background="@drawable/poupwindow_bg"
    android:orientation="vertical"
    android:paddingLeft="0.0sp"
    android:paddingRight="0.0sp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/poupwindow_title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.0px"
        android:background="@drawable/poupwindow_divider"
        android:contentDescription="@null"
        android:padding="0.0px" />

    <ListView
        android:id="@+id/poupwindow_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/poupwindow_divider"
        android:dividerHeight="2.0px"
        android:drawSelectorOnTop="true"
        android:fadingEdgeLength="0.0sp"
        android:listSelector="@drawable/poupwindow_item_bg" />

</LinearLayout>