<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/back_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/back_head" />

    <ScrollView
        android:id="@+id/add_second_hand_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_head"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/add_second_hand_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/add_second_hand_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/include_add_second_hand_item" />

            <include
                android:id="@+id/add_second_hand_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/include_add_second_hand_contact" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>